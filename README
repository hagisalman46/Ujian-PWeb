nama     VARCHAR(100)           Nama Mahasiswa
jurusan  VARCHAR(50)            Program Studi
email    VARCHAR(100)           Email Mahasiswa
dibuat   TIMESTAMP DEFAULT      CURRENT_TIMESTAMP


